        <url-pattern>/UserDetailsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>com.crs.controller.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageServlet</servlet-name>
        <url-pattern>/MessageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>com.crs.controller.RoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/RoomServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FriendRequestServlet</servlet-name>
        <servlet-class>com.crs.controller.FriendRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FriendRequestServlet</servlet-name>
        <url-pattern>/FriendRequestServlet</url-pattern>
    </servlet-mapping>
</web-app>